{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "declaration": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  // Allow debugging
  "sourceMap": true,
  // Allow javascript files
  "allowJs": true,
}
